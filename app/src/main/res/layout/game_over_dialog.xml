<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="193dp"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="GAME OVER"
            android:id="@+id/textViewGameOver"
            android:layout_gravity="center_horizontal"
            android:textColor="#e13737"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="32dp"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:id="@+id/imageView3"
            android:background="#5596e6"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewGameOver"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Mau ulangi dari awal?"
            android:id="@+id/textViewGameOverDescription"
            android:textColor="#444"
            android:layout_below="@+id/imageView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp" />

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Tidak"
            android:id="@+id/buttonGameOverTidak"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:background="#f03c3c" />

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="IYA"
            android:id="@+id/buttonGameOverIya"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="#6eb400" />

    </RelativeLayout>
</LinearLayout>